<% @products.each do |product| %>
    <div class="post">
      <h2 class="title"><%= product.name %></h2>

      <div class="entry">
        <p><%= image_tag "img02.jpg", class: "alignleft border" %>
          <%= truncate product.description, length: 150 %>
      </div>
      <%= link_to image_tag("addtocart.png"), line_items_path(product_id: product), method: :post %>
    </div>
<% end %>